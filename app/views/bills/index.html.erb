<div data-controller="bills">
  <% if @your_index %>
    <div class="container mt-4">
      <div class="row">
        <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
          <h1 class="ml-3">House Bills</h1>
          <%= link_to image_tag('add-button.svg'), new_flat_bill_path %>
        </div>

        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="pt-2">
            <%= render "bills_filter" %>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="cards-grid" data-target="bills.bills">
        <% @bills.order('due_date desc').each do |bill| %>
          <%= render 'bill_card', bill: bill %>
        <% end %>
      </div>
    </div>

  <% end %>

  </div>

</div>

