<div class="navbar navbar-expand-sm navbar-lewagon navbar-flatcares">

    <%= link_to "/", class: "navbar-brand" do %>
      <h3>flatcares.com</h3>
    <% end %>


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if (user_signed_in?) && (!current_user.flats.empty?) && (!current_page?(edit_user_registration_path)) %>
        <li class="nav-item">
          <% css_class_flat = controller?('flats') ? "nav-link text-orange" : "nav-link text-gray" %>
          <%= link_to "Home", flat_path(@flat), class: "#{css_class_flat}" %>
        </li>
        <li class="nav-item">
          <% css_class_bill = controller?('bills') ? "nav-link text-orange" : "nav-link text-gray" %>
          <%= link_to "Bills", flat_bills_path(@flat, @bill), class: "#{css_class_bill}" %>
        </li>
        <li class="nav-item">
          <% css_class_area = controller?('areas') ? "nav-link text-orange" : "nav-link text-gray" %>
          <%= link_to "Tasks", flat_areas_path(@flat, @area), class: "#{css_class_area}" %>
        </li>
        <li class="nav-item">
          <% css_class_event = controller?('event') ? "nav-link text-orange" : "nav-link text-gray" %>
          <%= link_to "Events", "#", class: "#{css_class_event}" %>
        </li>
        <li class="nav-item">
          <% css_class_chat = controller?('chat') ? "nav-link text-orange" : "nav-link text-gray" %>
          <%= link_to "Chat", "#", class: "#{css_class_chat}" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "dropdown-toggle avatar-secondary-orange ml-5", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% elsif (user_signed_in?) && (current_user.flats.empty?) && current_page?(edit_user_registration_path) %>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "dropdown-toggle avatar-secondary-orange ml-5", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
