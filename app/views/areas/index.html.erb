<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <div class="d-flex justify-content-between align-items-center">
        <h1 class="ml-3">Tasks</h1>
        <%= link_to image_tag('add-button.svg'), new_flat_area_path %>
      </div>
    </div>
  </div>
</div>

<div class="container area">
  <% @areas.each do |area| %>
    <div class="d-flex justify-content-center border-dashed">
      <div class="col-12 col-md-8">
        <%= link_to flat_area_path(@flat, area), class: "secondary-link text-decoration-none" do %>
          <div class="d-flex justify-content-left align-items-center py-3">
            <div class="col-2">
              <% if area.name.downcase.include?(' ') %>
                <i class="<%= AREAS_ICONS[area.category.downcase.to_sym] %>"></i>
              <% else %>
                <i class="<%= AREAS_ICONS[area.category.downcase.to_sym] %>"></i>
              <% end %>
            </div>
            <div class="col-5">
                <h6 class="mb-1 d-block"><%= area.name.capitalize %></h6>

                <% if area.assigned_user.nil? %>
                  <p class="mb-0 d-block">Nobody has been assigned yet</p>
                <% else %>
                  <p class="mb-0 d-block"><%= area.assigned_user.first_name %></p>
                <% end %>
            </div>
            <div class="col-5 d-flex justify-content-end flex-wrap">
              <% area.tasks.all.each do |task| %>
                  <% if task.completed == false %>
                    <i class="tracker far fa-circle"></i>
                  <% else %>
                    <i class="tracker fas fa-circle"></i>
                  <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>









