<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= simple_form_for [@flat, @event] do |f| %>
        <h2>Create an Event</h2>
        <div class="form-row">
          <div class="col">
            <%= f.input :name, placeholder: "Event's Name", label: false %>
          </div>
          <div class="col">
            <%= f.input :event_type, collection: EVENT_TYPE, placeholder: "Event's Type", label: false %>
          </div>
        </div>
        <%= f.input :location, class: "form-control", placeholder: "Event's Location", label: false %>
        <%= f.input :start_date, class: "form-control", placeholder: 'Starting Date'%>
        <%= f.input :end_date, class: "form-control", placeholder: 'Ending Date'%>
        <%= f.submit "Submit the Event", class: "btn btn-success text-white"%>
      <% end %>
    </div>
  </div>
</div>
