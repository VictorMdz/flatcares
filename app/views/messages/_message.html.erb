<div
  class="message-container <%= message.user == current_user ? 'message--sender' : 'message--recipient' %> "
  id="message-<%= message.id %>"
  data-author="<%= message.user_id %>"
>
<div>
  <h3 class="m-0" data-name="<%= message.user.first_name %>"><%= message.user == current_user ? '' : message.user.first_name %></h3>
  <p class="text-send mb-2"><%= message.content %></p>
  <p class="secondary-p"><%= message.created_at.strftime("%l:%M%p") %></p>
</div>
</div>

