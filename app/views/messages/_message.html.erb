<div
  class="d-flex align-items-center <%= message.user == current_user ? 'message--sender' : 'message--recipient' %> "
  id="message-<%= message.id %>"
  data-author="<%= message.user_id %>"
>
    <% if message.user.picture.attached? %>
      <%= cl_image_tag message.user.picture.key, :quality=>100, class: 'avatar-secondary-gray' %>
    <% else %>
      <i class="fas fa-user-circle fa-3x"></i>
    <% end %>
    <div class="message-container mx-2">
    <h3 class="m-0" data-name="<%= message.user.first_name %>"><%= message.user == current_user ? '' : message.user.first_name %></h3>
    <p class="text-message mb-2"><%= message.content %></p>
    <p class="secondary-p"><%= message.created_at.strftime("%l:%M%p") %></p>
    </div>
</div>
