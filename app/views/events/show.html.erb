<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between m-4">
        <h1> <%= @event.name %> </h1>
        <% if @event.user.picture.attached? %>
          <%= cl_image_tag @event.user.picture.key, :quality=>100, class: 'avatar-secondary-orange'%>
        <%else%>
          <i class="fas fa-user-circle fa-2x mr-2"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="calendar-card-white">
        <div class="d-flex justify-content-between">
          <h3 class="mb-3"> <%= @event.event_type.capitalize %></h3>
          <h3><i class="<%= ICONS_EVENT_TYPE[@event.event_type.to_sym] %>"></i></h3>
        </div>
        <div class="d-flex justify-content-between">
          <%= @event.start_date.strftime("%H:%M") %> - <%= @event.end_date.strftime("%H:%M") %>
          - <%= Date::MONTHNAMES[@event.start_date.month] %>, <%= @event.start_date.day %>
          <h3><i class="far fa-calendar"></i></h3>
        </div>
        <div class="d-flex justify-content-between">
          <%= @event.location %>
          <i class="fas fa-location-arrow"></i>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="m-4">
        <h3>Members (3) <i class="fas fa-users">  </i></h3>
      </div>
  </div>

</div>
