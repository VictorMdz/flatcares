<div class="container">
  <div class="row justify-content-center m-5">
    <div class="col-md-8">
      <h2>Create a new Bill</h2>
        <%= simple_form_for [@flat, @bill] do |f| %>
          <%= f.input :name %>
          <%= f.input :amount %>
          <%= f.input :due_date, as: :string, class: "form-control", :input_html => { :type => "date", :value => Date.today} %>
          <%= f.association :paying_user, collection: @flat.users, label_method: :first_name, prompt: "Who paid the bill?" %>
          <%= f.submit "Submit the bill", class: "btn btn-success text-white"%>
        <% end %>
    </div>
  </div>
</div>

