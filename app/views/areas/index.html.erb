<div class="container">
  <div class="row">
    <div class="col-12">
      <h3>Common Areas</h3>
    </div>
  </div>
</div>

<div class="container">
  <% @areas.each do |area| %>
    <div class="row border-bottom mx-1 my-2 py-3">
      <div class="col-2 justify-content-start align-items-center d-flex">
        <% if area.name == "kitchen" %>
          <i class="fas fa-utensils" style="font-size: 24px;"></i>
        <% elsif area.name == "toilet" %>
          <i class="fas fa-toilet" style="font-size: 24px;"></i>
        <% elsif area.name == "living room" %>
          <i class="fas fa-couch" style="font-size: 24px;"></i>
        <% elsif area.name == "corridor" %>
          <i class="fas fa-road" style="font-size: 24px;"></i>
        <% elsif area.name == "stairs" %>
          <i class="fas fa-shoe-prints" style="font-size: 24px;"></i>
        <% else %>
          <i class="fas fa-home" style="font-size: 24px;"></i>
        <% end %>
      </div>
      <div class="col-8 justify-content-start align-items-start">
          <h6 class="mb-1 d-block"><%= area.name %></h6>
          <p class="mb-0 d-block"><%= area.assigned_user.first_name %></p>
      </div>
      <div class="col-2 justify-content-end align-items-center d-flex">
        <i class="fas fa-circle" style="font-size: 10px;"></i>
        <i class="far fa-circle" style="font-size: 10px;"></i>
      </div>
    </div>
  <% end %>
</div>










